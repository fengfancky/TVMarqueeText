<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TVMarqueeTextView">

        <attr name="mDelayedTime" format="integer"/>
        <attr name="mSpace" format="dimension"/>
        <attr name="mSpeed" format="float"/>
        <attr name="mTextSize" format="dimension"/>
        <attr name="mTextColor" format="color|reference"/>
        <attr name="mGravity" >
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="center" value="2"/>
        </attr>

    </declare-styleable>

</resources>